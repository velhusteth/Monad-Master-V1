{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],                   
    "resolveJsonModule": true,          
    "outDir": "./dist",                 
    "rootDir": "./src"                 
  },
  "include": ["src"]                     
}
